{
    "name": "frontend",
    "type": "project:application",
    "platform": {
        "id": "default",
        "displayName": "Default",
        "output": "static"
    },
    "transpiler": {
        "id": "babel",
        "displayName": "Babel",
        "fileExtension": ".js",
        "options": {
            "plugins": [
                "transform-es2015-modules-amd"
            ]
        },
        "source": "src/**/*.js"
    },
    "markupProcessor": {
        "id": "none",
        "displayName": "None",
        "fileExtension": ".html",
        "source": "src/**/*.html"
    },
    "cssProcessor": {
        "id": "none",
        "displayName": "None",
        "fileExtension": ".css",
        "source": "src/**/*.css"
    },
    "copy": {
        "modules": {
            "src": [
                "node_modules/font-awesome/css/font-awesome.min.css",
                "node_modules/requirejs/bin/r.js",
                "node_modules/text/text.js"
            ],
            "dest": "static"
        },
        "src": {
            "options": {
                "base": "src"
            },
            "src": [
                "src/locale/**/*",
                "src/images/**/*"
            ],
            "dest": "static"
        }
    },
    "editor": {
        "id": "atom",
        "displayName": "Atom"
    },
    "unitTestRunner": {
        "id": "none",
        "displayName": "None"
    },
    "paths": {
        "root": "src",
        "resources": "src/resources"
    },
    "build": {
        "targets": [
            {
                "id": "default",
                "displayName": "Default",
                "output": "static"
            }
        ],
        "loader": {
            "type": "require",
            "configTarget": "aurelia-bundle.js",
            "includeBundleMetadataInConfig": "auto",
            "plugins": [
                {
                    "name": "text",
                    "extensions": [
                        ".html",
                        ".css"
                    ],
                    "stub": true
                }
            ]
        },
        "options": {
            "minify": "stage & prod",
            "sourcemaps": "dev & stage"
        },
        "bundles": [
            {
                "name": "openmotics-bundle.js",
                "source": [
                    "[**/*.js]",
                    "**/*.{css,html}"
                ]
            },
            {
                "name": "aurelia-bundle.js",
                "prepend": [
                    "node_modules/babel-polyfill/dist/polyfill.js",
                    "node_modules/bluebird/js/browser/bluebird.core.js",
                    "node_modules/whatwg-fetch/fetch.js",
                    "scripts/require.js"
                ],
                "dependencies": [
                    "aurelia-binding",
                    "aurelia-bootstrapper",
                    "aurelia-dependency-injection",
                    "aurelia-event-aggregator",
                    "aurelia-fetch-client",
                    "aurelia-framework",
                    "aurelia-history",
                    "aurelia-history-browser",
                    "aurelia-i18n",
                    "aurelia-loader",
                    "aurelia-loader-default",
                    "aurelia-logging",
                    "aurelia-logging-console",
                    "aurelia-metadata",
                    "aurelia-pal",
                    "aurelia-pal-browser",
                    "aurelia-path",
                    "aurelia-polyfills",
                    "aurelia-route-recognizer",
                    "aurelia-router",
                    "aurelia-task-queue",
                    "aurelia-templating",
                    "aurelia-templating-binding",
                    {
                        "name": "aurelia-dialog",
                        "path": "../node_modules/aurelia-dialog/dist/amd",
                        "main": "aurelia-dialog"
                    },
                    {
                        "name": "aurelia-templating-resources",
                        "path": "../node_modules/aurelia-templating-resources/dist/amd",
                        "main": "aurelia-templating-resources"
                    },
                    {
                        "name": "aurelia-templating-router",
                        "path": "../node_modules/aurelia-templating-router/dist/amd",
                        "main": "aurelia-templating-router"
                    },
                    {
                        "name": "aurelia-i18n",
                        "path": "../node_modules/aurelia-i18n/dist/amd",
                        "main": "aurelia-i18n"
                    },
                    {
                        "name": "i18next",
                        "path": "../node_modules/i18next/dist/umd",
                        "main": "i18next"
                    },
                    {
                        "name": "i18next-xhr-backend",
                        "path": "../node_modules/i18next-xhr-backend/dist/umd",
                        "main": "i18nextXHRBackend"
                    }
                ]
            },
            {
                "name": "others-bundle.js",
                "dependencies": [
                    "jquery",
                    "numeral",
                    {
                        "name": "text",
                        "path": "../scripts/text"
                    },
                    {
                        "name": "admin-lte",
                        "path": "../node_modules/admin-lte/dist",
                        "main": "js/app.min",
                        "deps": [
                            "jquery"
                        ],
                        "exports": "$",
                        "resources": [
                            "css/AdminLTE.css",
                            "css/skins/skin-green.css"
                        ]
                    },
                    {
                        "name": "bootstrap",
                        "path": "../node_modules/bootstrap/dist",
                        "main": "js/bootstrap.min",
                        "deps": [
                            "jquery"
                        ],
                        "exports": "$",
                        "resources": [
                            "css/bootstrap.css"
                        ]
                    },
                    {
                        "name": "bootstrap-toggle",
                        "path": "../node_modules/bootstrap-toggle",
                        "main": "js/bootstrap-toggle.min",
                        "deps": [
                            "bootstrap"
                        ],
                        "resources": [
                            "css/bootstrap-toggle.css"
                        ]
                    },
                    {
                        "name": "ion-rangeslider",
                        "path": "../node_modules/ion-rangeslider",
                        "main": "js/ion.rangeSlider.min",
                        "resources": [
                            "css/ion.rangeSlider.css",
                            "css/ion.rangeSlider.skinModern.css"
                        ]
                    }
                ]
            },
            {
                "name": "blockly-bundle.js",
                "dependencies": [
                    {
                        "name": "lodash",
                        "path": "../node_modules/lodash",
                        "main": "index"
                    },
                    {
                        "name": "xmldom",
                        "path": "../node_modules/xmldom",
                        "main": "dom-parser"
                    },
                    {
                        "name": "node-blockly",
                        "path": "../node_modules/node-blockly",
                        "main": "index",
                        "deps": [
                            "lodash"
                        ]
                    }
                ]
            }
        ]
    }
}
